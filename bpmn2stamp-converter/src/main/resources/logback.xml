<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="${LOGGING_ROOT_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>